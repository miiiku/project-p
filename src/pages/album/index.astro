      "https://cdn.midjourney.com/d37acca6-eb52-4312-8ccc-b95bb8fa0b88/0_0.jpeg",
  },
  {
    name: "近期更新 ⏰",
    desc: "社交网络上的前沿之声",
    cover:
      "https://cdn.midjourney.com/45666f11-ff21-483a-b00f-11e311e6c279/0_0.jpeg",
  },
];

const albums = [
  {
    name: "WARPATH - EP",
    desc: "Uncured",
    cover:
      "https://cdn.midjourney.com/00d226fa-2102-48aa-9471-f0e63ef21752/0_3.jpeg",
  },
  {
    name: "Game of Faces",
    desc: "Dynazty",
    cover:
      "https://cdn.midjourney.com/88a18878-1d6d-40cc-b9ab-9f0a022c469c/0_3.jpeg",
  },
  {
    name: "Peacetime",
    desc: "The Boy That Got Away",
    cover:
      "https://cdn.midjourney.com/882d5b61-adde-436c-84bc-347d192e573b/0_1.jpeg",
  },
  {
    name: "Guess Who?",
    desc: "奥尔加 · 帕申科",
    cover:
      "https://cdn.midjourney.com/2334c08b-ef1b-459f-abeb-acd54594b52b/0_3.jpeg",
  },
  {
    name: "Can't Take Away The Fire",
    desc: "Raven",
    cover:
      "https://cdn.midjourney.com/3673497a-81c2-48fc-8aa2-e74fa300aabf/0_2.jpeg",
  },
  {
    name: "落地窗前",
    desc: "狮童",
    cover:
      "https://cdn.midjourney.com/ae1d7fab-86e3-44f7-9163-8a06572b9aa3/0_3.jpeg",
  },
  {
    name: "NINE",
    desc: "Bleeding Through",
    cover:
      "https://cdn.midjourney.com/beef0372-21e4-4835-b51e-54ec1ca0d4a8/0_2.jpeg",
  },
  {
    name: "Sports car",
    desc: "Tate McRae",
    cover:
      "https://cdn.midjourney.com/051e63e4-448e-41d1-aa00-461749e9c059/0_0.jpeg",
  },
];
---

<Layout>
  <div
    class="w-(--content-width) mx-auto py-8 px-6 rounded bg-stone-800/5 dark:bg-stone-100/5"
  >
    <div class="overflow-x-auto">
      <div class="flex gap-6">
        {
          topAlbums.map((album) => (
            <a class="shrink-0 flex-1" href="javascript:;">
              <section>
                <h4 class="font-bold dark:text-zinc-200">{album.name}</h4>
                <div class="mt-1 mb-2 text-sm text-zinc-600 dark:text-zinc-400">
                  {album.desc}
                </div>
                <div class="bg-amber-200 aspect-video rounded overflow-hidden">
                  <img
                    class="block w-full h-full object-cover"
                    src={album.cover}
                    alt={album.name}
                  />
                </div>
              </section>
            </a>
          ))
        }
      </div>
    </div>

    <div class="overflow-x-auto mt-6">
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {
          albums.map((album) => (
            <a class="shrink-0 flex-1" href="javascript:;">
              <section>
                <div class="aspect-square rounded-md overflow-hidden">
                  <img
                    class="block w-full h-full object-cover"
                    src={album.cover}
                    alt={album.name}
                  />
                </div>
                <h4 class="mt-2 font-bold dark:text-zinc-200">{album.name}</h4>
                <div class="text-sm text-zinc-600 dark:text-zinc-400">
                  {album.desc}
                </div>
              </section>
            </a>
          ))
        }
      </div>
    </div>
  </div>
</Layout>
